@using static SFA.DAS.AODP.Web.Models.FormBuilder.Question.EditQuestionViewModel
@model TextInputOptions

<div class="govuk-form-group">
    <govuk-input name="TextInput[MinLength]" type="number" asp-for="MinLength" input-class="govuk-input--width-3" inputmode="numeric" pattern="[0-9]*" spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">What is the minimum input length? (Optional)</govuk-input-label>
    </govuk-input>
</div>

<div class="govuk-form-group">
    <govuk-input name="TextInput[MaxLength]" type="number" asp-for="MaxLength" input-class="govuk-input--width-3" inputmode="numeric" pattern="[0-9]*" spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">What is the maximum input length? (Optional)</govuk-input-label>
    </govuk-input>
</div>
<style>
    #pages-question-input-is-optional-true-hint {
        padding: 0 !important;
    }
</style>