@    using SFA.DAS.AODP.Web.Models.Section
@model DeleteSectionViewModel

<h1 class="govuk-heading-l">Delete Section?</h1>

<form asp-action="Delete" method="post">
    @Html.HiddenFor(m => m.FormVersionId);
    @Html.HiddenFor(m => m.SectionId);
    <govuk-warning-text icon-fallback-text="Warning">
        Are you sure you want to delete the section "@Model.Title"?
    </govuk-warning-text>

    <govuk-button class="govuk-button--warning" type="submit">Delete</govuk-button>
    <a class="govuk-button govuk-button--secondary" href="@Url.Action("Edit", "Form", new { id = Model.FormVersionId })">Cancel</a>
</form>