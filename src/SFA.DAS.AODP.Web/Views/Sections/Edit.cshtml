@model GetSectionByIdQueryResponse.Section

<h1 class="govuk-heading-l">Edit Section</h1>

<form asp-action="Edit" method="post">
    <div>
        <govuk-input name="Title" input-class="govuk-input--width-10" inputmode="text" pattern="[0-9]*" spellcheck="false" value="@Model.Title">
            <govuk-input-label is-page-heading="false" class="govuk-label--s">Title</govuk-input-label>
        </govuk-input>
    </div>
    <div>
        <govuk-input name="Description" input-class="govuk-input--width-10" inputmode="text" pattern="[0-9]*" spellcheck="false" value="@Model.Description">
            <govuk-input-label is-page-heading="false" class="govuk-label--s">Description</govuk-input-label>
        </govuk-input>
    </div>
    <div>
        <govuk-input name="Order" input-class="govuk-input--width-10" inputmode="text" pattern="[0-9]*" spellcheck="false" value="@Model.Order">
            <govuk-input-label is-page-heading="false" class="govuk-label--s">Order</govuk-input-label>
        </govuk-input>
    </div>
    <div>
        <govuk-select name="NextSectionId">
            <govuk-select-label>Next Section</govuk-select-label>
            @foreach (var item in (List<GetAllSectionsQueryResponse.Section>)ViewData["Sections"])
            {
                <govuk-select-item value="@item.Id">@item.Title</govuk-select-item>
            }
        </govuk-select>
    </div>

    <govuk-button type="submit">Save</govuk-button>
    <a class="govuk-button govuk-button--secondary" href="@Url.Action("Edit", "Form", new { id = Model.FormVersionId })">Cancel</a>
</form>

<hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

<a class="govuk-button" asp-action="Create" asp-controller="Page" asp-route-sectionId="@Model.Id">Create New Page</a>
<table class="govuk-table">
    <thead class="govuk-table__head">
        <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header">Title</th>
            <th scope="col" class="govuk-table__header">Order</th>
            <th scope="col" class="govuk-table__header">Description</th>
            <th scope="col" class="govuk-table__header">Options</th>
        </tr>
    </thead>
    <tbody class="govuk-table__body">
        @foreach (var item in (List<GetAllPagesQueryResponse.Page>)ViewData["Pages"])
        {
            <tr class="govuk-table__row">
                <td>@item.Title</td>
                <td>@item.Order</td>
                <td>@item.Description</td>
                <td>
                    <a class="govuk-button" href="@Url.Action("Edit", "Page", new { pageId = item.Id, sectionId = item.SectionId, formVersionId = Model.FormVersionId })">Edit</a>&nbsp;
                    <a class="govuk-button govuk-button--warning" href="@Url.Action("Delete", "Page", new { pageId = item.Id, sectionId = item.SectionId, formVersionId = Model.FormVersionId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>