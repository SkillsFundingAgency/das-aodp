@    using SFA.DAS.AODP.Web.Models.Page
@model DeletePageViewModel

<h1 class="govuk-heading-l">Delete Page?</h1>

<form asp-action="Delete" method="post">
    @Html.HiddenFor(m => m.FormVersionId);
    @Html.HiddenFor(m => m.SectionId);
    @Html.HiddenFor(m => m.PageId);

    <govuk-warning-text icon-fallback-text="Warning">
        Are you sure you want to delete the page "@Model.Title"?
    </govuk-warning-text>

    <govuk-button class="govuk-button--warning" type="submit">Delete</govuk-button>
    @*     <a class="govuk-button govuk-button--secondary" href="@Url.Action("Edit", "Section", new { sectionId = Model.SectionId, formVersionId = Model })">Cancel</a> *@
</form>